        <form action="/personal-info" method="GET">
            <input type="button" value="Personal Info">
          </form>

          <form action="/transaction" method="GET"></form>
            <input type="button" value="Transactions">
          </form>
         
          <form action="/contacts" method="GET">
            <input type="button" value="Contacts">
          </form>
        <div class="mid-right-container">
            <div class="mid">
                <div class="profile-info">
                    <img src="Images/personal-profile.png" width="75px" height="75px" />
                    <p><%= user.reg_firstname + ' ' + user.reg_middlename + ' ' + user.reg_lastname %></p> <!-- Retrieved from database -->
                </div>
                <div class="user-contact-container">
                    <div class="information">
                        <!-- User Information Table -->
                        <div class="user-information">
                            <h3>User Information</h3>
                            <table>
                                <tbody>
                                    <tr>
                                        <td><strong>First Name:</strong></td>
                                        <td id="first-name"><%= user.reg_firstname %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Middle Name:</strong></td>
                                        <td id="middle-name"><%= user.reg_middlename || '-' %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Last Name:</strong></td>
                                        <td id="last-name"><%= user.reg_lastname %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Suffix:</strong></td>
                                        <td id="suffix"><%= user.user_suffix || '-' %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Gender:</strong></td>
                                        <td id="gender"><%= user.gender %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Civil Status:</strong></td>
                                        <!--<td id="civil-status"><%= user.user_civil_status %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Birth Date:</strong></td>
                                       <!--<td id="birth-date"><%= //user.user_birthdate %></td>--> 
                                    </tr>
                                    <tr>
                                        <td><strong>Birth Place:</strong></td>
                                        <td id="birth-place"><%= user.reg_birthplace %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Citizenship:</strong></td>
                                        <td id="citizenship"><%= user.reg_user_citizenship %></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Contact Information Table -->
                        <div class="contact-information">
                            <h3>Contact Information</h3>
                            <table>
                                <tbody>
                                    <tr>
                                        <td><strong>Address:</strong></td>
                                        <td id="address"><%= user.reg_address %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Mobile:</strong></td>
                                        <td id="mobile"><%= user.reg_mobile_number %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email:</strong></td>
                                        <td id="email"><%= user.reg_useremail %></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="right">
                    <div class="buttons">
                        <form action="/reservation">
                            <button type="submit">reserve</button>
                        </form>
                        
                            <!-- ipapasok ko nalang to sa reserve  
                            <a href="health-center.html">

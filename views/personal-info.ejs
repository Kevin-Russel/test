                <h1>Personal Information</h1>
            </div>
        </div>
        <div class="profile">
            <img src="Images/profile.png" alt="Profile" height="75px" />
            <p><%= user.reg_firstname %> <%= user.reg_lastname %></p> <!-- Display user's full name -->
            <i class="fa-solid fa-caret-down"></i>
        </div>
    </div>
